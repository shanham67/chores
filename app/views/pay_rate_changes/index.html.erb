<h1>Listing pay_rate_changes</h1>

<table border="1">
  <tr>
   <th>Worker</th>
   <th>Eff.Date</th>
   <th>New Rate</th>
  </tr>

<% @pay_rate_changes.each do |pay_rate_change| %>
  <tr>
    <td><%= pay_rate_change.worker.name %></td>
    <td><%= pay_rate_change.effective_date %></td>
    <td align="right"><%= number_to_currency pay_rate_change.new_rate %></td>
    <td><%= link_to 'Show', pay_rate_change %></td>
    <td><%= link_to 'Edit', edit_pay_rate_change_path(pay_rate_change) %></td>
    <td><%= link_to 'Destroy', pay_rate_change, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New pay_rate_change', new_pay_rate_change_path %>
